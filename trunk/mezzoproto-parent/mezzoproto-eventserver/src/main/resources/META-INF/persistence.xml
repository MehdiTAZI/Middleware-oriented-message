<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="Event" transaction-type="RESOURCE_LOCAL">
	
<!--	  <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>-->
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	  <!-- Classes du model pris en charge par l'ORM -->
	  <class>fr.esiag.mezzodijava.mezzoproto.cosevent.model.EventString</class>
	
 	  <properties>
 	    <!-- Propriétés de connexion -->
		<property name="javax.persistence.jdbc.driver"   value="org.apache.derby.jdbc.EmbeddedDriver" />
		<property name="javax.persistence.jdbc.url" 	 value="jdbc:derby:/home/ubuntu/EventDB;create=true" />
		<property name="javax.persistence.jdbc.user"     value="test" />
		<property name="javax.persistence.jdbc.password" value="test" />

        <!-- Propriétés de l'ORM propres à EclipseLink -->
		<!-- EclipseLink should create the database schema automatically -->
		<!--<property name="eclipselink.ddl-generation"             value="creates-tables" />
		<property name="eclipselink.ddl-generation.output-mode"	value="database" />
	  -->
	  	<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
	  </properties>
	</persistence-unit>
	
</persistence>
